@page
@model QuizzApp.Pages.Quizzes.CreateQuizzModel
@{
}

<h2 class='header text-primary'>Create Your quizz</h2>
<hr />
<form method='post' class='p-3'>
	<div class="container mb-5">
		<div class="row d-flex justify-content-between">
			<div class="col-5">
				<label asp-for="QuizViewModel.Title" class="col-form-label-lg"></label>
				<input asp-for="QuizViewModel.Title" type="text" class="form-control form-control-lg" placeholder="Quiz title" />
				<span asp-validation-for="QuizViewModel.Title" class="text-danger"></span>
			</div>
			<div class="col-5">
				<label asp-for="QuizViewModel.Threshold" class="col-form-label-lg"></label>
				<input asp-for="QuizViewModel.Threshold" type="range" class="form-range" min="0" max="100" step="5" oninput="updateInputValue(this.value)">
				<output id="slider-value">50</output>
			</div>
		</div>
	</div>
	<div class='questions mb-2 mt-4'>
		<div class='question container mb-4'>
			<div class='row'>
				<div class="col-11">
					<input asp-for='Questions[0].QuestionContent' type='text' class='question-input form-control form-control-lg' placeholder='Add question' />
					<span asp-validation-for="Questions[0].QuestionContent" class="question-error text-danger"></span>
				</div>
			</div>
			<div class='row mt-3 g-1'>
				<div class='col-11'>
					<input asp-for='Questions[0].Answers[0].AnswerContent' type='text' class='answer-input form-control' placeholder='Add answer' />
					<span asp-validation-for="Questions[0].Answers[0].AnswerContent" class="answer-error text-danger"></span>
				</div>
				<div class="col-1">
					<input asp-for='Questions[0].Answers[0].IsCorrect' type="checkbox" title="Correct answer" class="is-correct-input col-5" />
					<button type="button" class="remove-answer btn btn-primary col-5">-</button>
				</div>
			</div>
			<div class='row mt-2 g-1'>
				<div class='col-11'>
					<input asp-for='Questions[0].Answers[1].AnswerContent' type='text' class='answer-input form-control' placeholder='Add answer' />
					<span asp-validation-for="Questions[0].Answers[1].AnswerContent" class="answer-error text-danger"></span>
				</div>
				<div class="col-1">
					<input asp-for='Questions[0].Answers[1].IsCorrect' type="checkbox" title="Correct answer" class="is-correct-input col-5" />
					<button type="button" class="remove-answer btn btn-primary col-5">-</button>
				</div>
			</div>
			<button type='button' class='add-answer btn btn-primary mt-2'>+</button>
		</div>
	</div>

	<div class="container">
		<button type='button' id='add-question' class='btn btn-primary mt-3 col-2'>Add next question</button>
	</div>

	<div class='row justify-content-center'>
		<button type='submit' class='create_quiz btn btn-lg btn-primary mt-3 col-2'>Create quiz</button>
	</div>
</form>

@section Scripts
{
	<script type="text/javascript" src="~/js/quiz.js"></script>
	@{
		<partial name="_ValidationScriptsPartial" />
	}

}