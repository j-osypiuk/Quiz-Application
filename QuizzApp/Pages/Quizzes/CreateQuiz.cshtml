@page
@model QuizzApp.Pages.Quizzes.CreateQuizzModel
@{
}

<h2 class='header text-primary'>Create Your quizz</h2>
<hr />
<form method='post' class='p-3'>
	<div class="container mb-5">
		<div class="row d-flex justify-content-between">
			<div class="col-5 px-0">
				<label asp-for="QuizViewModel.Title" class="col-form-label-lg"></label>
				<input asp-for="QuizViewModel.Title" type="text" class="form-control form-control-lg" placeholder="Quiz title" />
				<span asp-validation-for="QuizViewModel.Title" class="text-danger"></span>
			</div>
			<div class="col-5 px-0">
				<label asp-for="QuizViewModel.Threshold" class="col-form-label-lg"></label>
				<input asp-for="QuizViewModel.Threshold" type="range" class="form-range" min="0" max="100" step="5" oninput="updateInputValue(this.value)">
				<output id="slider-value">50</output>
			</div>
		</div>
	</div>
	<div class='questions mb-2 mt-4'>
		<div class='question container mb-4 px-0'>
			<div class='row align-items-center'>
				<div class="col-9 col-sm-11">
					<textarea asp-for='Questions[0].QuestionContent' type='text' class='question-input form-control form-control-lg' style="height:75px;" placeholder='Add question'></textarea>
					<span asp-validation-for="Questions[0].QuestionContent" class="question-error text-danger"></span>
				</div>
			</div>
			<div class='row mt-3 align-items-center'>
				<div class='col-9 col-sm-11'>
					<textarea asp-for='Questions[0].Answers[0].AnswerContent' type='text' class='answer-input form-control' style="height:50px;" placeholder='Add answer'></textarea>
					<span asp-validation-for="Questions[0].Answers[0].AnswerContent" class="answer-error text-danger"></span>
				</div>
				<div class="col-3 col-sm-1">
					<div class="row">
						<div class="col-6 d-flex justify-content-center align-items-center">
							<input asp-for='Questions[0].Answers[0].IsCorrect' type="checkbox" title="Correct answer" class="is-correct-input" style="height:18px; width:18px;"/>
						</div>
						<div class="col-6">
							<button type="button" class="remove-answer btn btn-primary">
								<i class="bi bi-x-lg"></i>
							</button> 
						</div>
					</div>
				</div>
			</div>
			<div class='row mt-2 align-items-center'>
				<div class='col-9 col-sm-11'>
					<textarea asp-for='Questions[0].Answers[1].AnswerContent' type='text' class='answer-input form-control' style="height:50px;" placeholder='Add answer'></textarea>
					<span asp-validation-for="Questions[0].Answers[1].AnswerContent" class="answer-error text-danger"></span>
				</div>
				<div class="col-3 col-sm-1">
					<div class="row">
						<div class="col-6 d-flex justify-content-center align-items-center">
							<input asp-for='Questions[0].Answers[1].IsCorrect' type="checkbox" title="Correct answer" class="is-correct-input" style="height:18px; width:18px;"/>
						</div>
						<div class="col-6">
							<button type="button" class="remove-answer btn btn-primary">
								<i class="bi bi-x-lg"></i>
							</button>
						</div>
					</div>
				</div>
			</div>
			<button type="button" class="add-answer btn btn-primary mt-2">
				<i class="bi bi-plus-lg"></i>
			</button>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<button type='button' id='add-question' class='btn btn-primary mt-3 col-6 col-sm-2'>Add next question</button>
		</div>
	</div>

	<div class='row justify-content-center mt-4'>
		<button type='submit' class='create_quiz btn btn-lg btn-primary mt-3 col-6 col-sm-2'>Create quiz</button>
	</div>
</form>

@section Scripts
{
	<script type="text/javascript" src="~/js/quiz.js"></script>
	@{
		<partial name="_ValidationScriptsPartial" />
	}

}