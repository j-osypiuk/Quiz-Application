@page
@model QuizzApp.Pages.Quizzes.UserQuizzesModel
@{
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Enter code</th>
            <th scope="col">Results</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.UserQuizzes.Count; i++)
        {
            <tr>
                <th class="align-middle" scope="row">@(i + 1)</th>
                <td class="align-middle">@Model.UserQuizzes[i].Title</td>
                <td class="align-middle">@Model.UserQuizzes[i].QuizCode</td>
                <td class="align-middle">
                    <a class="link-primary text-decoration-none">Results</a>
                </td>
                <td>
                    <form method="post">
                        <input asp-for="@Model.SelectedQuizId" type="hidden" value="@Model.UserQuizzes[i].Id" />
                        <button  class="edit-quiz btn btn-primary text-white text-decoration-none">Edit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
