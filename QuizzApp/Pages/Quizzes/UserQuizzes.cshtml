@page
@model QuizzApp.Pages.Quizzes.UserQuizzesModel
@{
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Enter code</th>
            <th scope="col">Results</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.UserQuizzes.Count; i++)
        {
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@Model.UserQuizzes[i].Title</td>
                <td>@Model.UserQuizzes[i].QuizCode</td>
                <td>
                    <a class="link-primary text-decoration-none">Results</a>
                </td>
                <td>
                    <a role="button" class="btn btn-primary text-white text-decoration-none">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>