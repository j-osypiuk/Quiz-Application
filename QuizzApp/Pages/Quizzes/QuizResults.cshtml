@page
@model QuizzApp.Pages.Quizzes.QuizResultsModel
@{
}

<h2 class='header text-primary col-5'>@Model.Title</h2>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Result</th>
            <th scope="col">Creation time</th>
            <th scope="col" class="text-center">Delete</th>
        </tr>
    </thead>
        <tbody>
            <form method="post">
                <input asp-for="QuizId" type="hidden" value="@Model.QuizId" />
                @for (int i = 0; i < Model.Results.Count; i++)
                {
                <tr>
                    <th class="align-middle" scope="row">@(i + 1)</th>
                    <td class="align-middle">@Model.Results[i].FirstName</td>
                    <td class="align-middle">@Model.Results[i].LastName</td>
                    <td class="align-middle">@Model.Results[i].Score<span> %</span></td>
                    <td class="align-middle">@Model.Results[i].CreateDate</td>
                    <td class="text-center align-middle"><input asp-for="ToDelete[i]" type="checkbox" title="Delete result" style="width: 15px; height: 15px;" /></td>
                </tr>
                }
                <tr>
                    <th class="border-0" scope="row"></th>
                    <td class="border-0"></td>
                    <td class="border-0"></td>
                    <td class="border-0"></td>
                    <td class="border-0"></td>
                    <td class="text-center border-0 align-middle"><button type='submit' class='btn btn-danger'>Delete</button></td>
                </tr>
            </form>
        </tbody>
</table>