@page
@model QuizzApp.Pages.Account.LoginModel
@{
}

<div class="container mt-5 p-5">
    <div class="row justify-content-center ">
        <form method="post" class="col-3 p-3 rounded">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <label asp-for="UserCredential.Username" class="form-label">User Name</label>
            <input asp-for="UserCredential.Username" type="text" class="form-control" placeholder="Your Login" />
            <span asp-validation-for="UserCredential.Username" class="text-danger"></span>
            <label asp-for="UserCredential.Password" class="form-label mt-3"></label>
            <input asp-for="UserCredential.Password" type="password" class="form-control" id="password-input" placeholder="Your Password" />
            <span asp-validation-for="UserCredential.Password" class="text-danger"></span>
            <div class="text-center">
                <button type="submit" class="btn btn-primary mt-4">Login</button>
            </div>
            <div class="text-center pt-4">
                <a asp-page="/Account/Register">Create account</a>
            </div>
        </form>
    </div>
</div>
